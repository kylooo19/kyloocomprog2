total = 0
count = 5 

for i in range(1, count + 1):
    while True:
        try:
            num = float(input(f"Enter number {i}: "))
            total += num
            break
        except ValueError:
            print("Invalid input. Please enter a number.")

average = total / count
print(f"The average of the {count} numbers is: {average}")
